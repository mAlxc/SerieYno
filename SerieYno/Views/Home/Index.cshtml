@{
    ViewBag.Title = "Home Page";
}
<div id="myCarousel" class="carousel slide carousel-margin" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">

        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">

        <div class="item active">
            <img src="~/images/Home/netflix-superheros.jpg" alt="Superheros">
        </div>

        <div class="item">
            <img src="~/images/Home/got.jpg" alt="Got">
        </div>

        <div class="item">
            <img src="~/images/Home/TWD.jpg" alt="TWD">
        </div>
    </div>
    <input type="text" placeholder="Rechercher" class="form-control pos-input" id="usr">
    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

